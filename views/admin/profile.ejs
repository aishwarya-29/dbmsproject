                                 console.log(jsonObject);
                                 });
                             };
                            fileReader.readAsBinaryString(selectedFile);
                            }
                    });
                </script>
            </div>
        </div>
    </div>
    <br><br>
    <form action="/admin/logout" method="POST">
    <button style="float: right" class="btn btn-dark" type="submit">Logout</button>
    </form>
    <br><br>
</div>

