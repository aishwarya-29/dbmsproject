        <% set1.forEach(s => { %>
            <option><%= s %></option>
        <% }); %>
    </select>
    <button style="float: right;" id="search" class="btn btn-sm btn-info">Look for free slots</button>
    <div class="slots">

    </div>

    <br><br>
</div>

<br><br><hr><br><br>

<div class="container" id="change">
    <h2 style="text-align: center; color: #457B9D;">Request for a substitude faculty</h2>
    <br><br>
    <label for="class">Choose Class :- &nbsp;</label>
    <select id="class" name="class">
        <% set1.forEach(s => { %>
            <option><%= s %></option>
        <% }); %>
    </select> <br>
    <label for="course">Choose Course :- &nbsp;</label>
    <select id="course" name="course">
    <% set2.forEach(s => { %>
            <option><%= s %></option>
        <% }); %>
    </select> <br>
